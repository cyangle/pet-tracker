  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gdb pet-tracker",
      "type": "gdb",
      "request": "launch",
      "preLaunchTask": "build pet-tracker (debug)",
      "target": "./bin/pet-tracker",
      "cwd": "${workspaceRoot}/pet-tracker",
      "valuesFormatting": "parseText"
    },
    {
      "name": "lldb_attach",
      "type": "lldb",
      "request": "attach",
      // "preLaunchTask": "build pet-tracker (debug)",
      "program": "${workspaceFolder}/pet-tracker/bin/pet-tracker",
      // "args": [],
      // "cwd": "${workspaceFolder}/pet-tracker",
      "initCommands": [
        "command script import ${workspaceFolder}/crystal_formatters.py"
      ]
    },
    {
      "name": "lldb_remote",
      "type": "lldb",
      "request": "attach",
      "program": "${workspaceFolder}/pet-tracker/bin/pet-tracker",
      "initCommands": [
        "platform select remote-linux", // Execute `platform list` for a list of available remote platform plugins.
        "platform connect connect://127.0.0.1:1234",
        "settings set target.inherit-env false", // See the note below.
        "command script import ${workspaceFolder}/crystal_formatters.py"
      ]
    },
    {
      "name": "lldb_pet_tracker",
      "type": "lldb",
      "request": "launch",
      // "preLaunchTask": "build pet-tracker (debug)",
      "program": "${workspaceFolder}/pet-tracker/bin/pet-tracker",
      "args": [],
      "cwd": "${workspaceFolder}/pet-tracker",
      "initCommands": [
        "command script import /usr/local/etc/crystal_formatters.py"
      ]
    }
  ]
}